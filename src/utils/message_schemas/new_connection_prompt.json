{
    "$id": "https://example.com/new_connection_prompt.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "new_connection_prompt",
    "type": "object",
    "properties": {
        "message_type": {
            "type": "string",
            "pattern": "^new_connection_prompt$"
        },
        "current_games": {
            "description": "list of current game IDs",
            "type": "array",
            "items": {
                "description": "a game ID",
                "type": "string"
            }
        },
        "current_players": {
            "description": "list of current player IDs",
            "type": "array",
            "items": {
                "description": "a player ID",
                "type": "string"
            }
        },
        "chapters_available": {
            "description": "list of chapters available",
            "type": "array",
            "items": {
                "description": "chapter - max question objects",
                "type": "object",
                "properties": {
                    "chapter": {
                        "description": "chapter ",
                        "type": "integer"
                    },
                    "max_questions": {
                        "description": "maximum number of questions in this chapter",
                        "type": "integer"
                    }
                }
            }
        },
        "success_message": {
            "description": "success message returned by the server",
            "type": "string"
        }
    },
    "required": [
        "message_type",
        "current_games",
        "current_players",
        "chapters_available",
        "max_questions"
    ],
    "additionalProperties": false
}
