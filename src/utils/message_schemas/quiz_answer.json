{
  "$id": "https://example.com/address.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "quiz_answer",
  "type": "object",
  "properties": {
    "message_type": {
      "type": "string",
      "pattern": "^quiz_answer"
    },
    "question": {
      "description": "the question being asked",
      "type": "string"
    },
    "answer": {
      "description": "answer chosen by player",
      "type": "string"
    },
    "success_message": {
      "description": "success message returned by the server",
      "type": "string"
    }
  },
  "required": [ "message_type", "question", "answer" ],
  "additionalProperties": false
}
