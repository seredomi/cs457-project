{
    "$id": "https://example.com/address.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "game_update",
    "type": "object",
    "properties": {
        "message_type": {
            "type": "string",
            "pattern": "^game_update$"
        },
        "subtype": {
            "type": "string",
            "pattern": "^(game_created|player_join|player_leave|game_end|response_update)$"
        },
        "message": {
            "description": "descriptive message",
            "type": "string"
        },
        "game_id": {
            "description": "game id",
            "type": "string"
        },
        "player_id": {
            "description": "player id",
            "type": "string"
        },
        "success_message": {
            "description": "success message returned by the server",
            "type": "string"
        }
    },
    "required": ["message_type", "subtype"],
    "additionalProperties": true
}
