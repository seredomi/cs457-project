{
  "$id": "https://example.com/address.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "quiz_answer",
  "type": "object",
  "properties": {
    "message_type": {
      "type": "string",
      "pattern": "^quiz_answer"
    },
    "answer": {
      "description": "answer chosen by player",
      "type": "integer"
    },
    "success_message": {
      "description": "success message returned by the server",
      "type": "string"
    },
    "player_name": {
      "description": "player id",
      "type": "string"
    },
    "game_id": {
      "description": "game id",
      "type": "string"
    }
  },
  "required": ["message_type", "answer", "player_name", "game_id"],
  "additionalProperties": false
}
